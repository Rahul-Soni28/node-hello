pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                sh 'npm pack'
                sh 'npm run start &'
            }
        }
        stage("test"){
            steps{
                echo "====++++Testing++++===="
            }
        }
    }
    post{
        always{
            echo "====++++always++++===="
        }
        success{
            echo "====++++only when successful++++===="
        }
        failure{
            echo "====++++only when failed++++===="
        }
    }
}