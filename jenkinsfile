//Running the stages in parallely on multiple agents
// using decalarative syntax with webhooks
pipeline{
    agent none
    stages{
        stage("build"){
            agent{
                label "slave-2"
            }
            steps{
                echo "Building"
            }
        }
        stage("testing parallel"){
            parallel{
                stage("test on linux1"){
                    agent{
                        label "master"
                    }
                    steps{
                        echo "testing on feature branch with master agent"
                    }
                }
                stage("test on slave 1"){
                    agent{
                        label "slave-1"
                    }
                    steps{
                        echo "test on feature branch with slave-1"
                    }
                }
            }
        }
    }
}
